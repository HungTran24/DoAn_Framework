                                                    </div>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price" style="font-size:16px; font-weight: 500;">@item.ProductPrice.Value.ToString("#,##0") đ</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="pagination-area">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center" style="font-size: 25px; margin-bottom: 10px;">
                                @Html.PagedListPager(Model, page=>Url.Action("Index", new{page=page}))
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

