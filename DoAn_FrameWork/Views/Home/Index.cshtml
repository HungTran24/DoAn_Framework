@model X.PagedList.IPagedList<Product>;
@using PagedList.Core.Mvc
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .blog-item{
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    .blog-content{
        background: #fff!important;
    }

    .swiper-button-next:hover, .swiper-button-prev:hover {
        background-color: none!important;
        border-color: none !important;
        color: #3399ff;
    }
    .swiper-button-next:after, .swiper-button-prev:after{
        font-size: 25px;
    }

    .product-item {
        transition: transform 0.3s ease;
    }

    .product-item:hover {
        box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 20px;
        transform: translateY(-1px);
    }
    .title{
        font-family: Inter,Helvetica,Arial,sans-serif;

    }
    .title a:hover{
            color: initial !important;
            background-color: initial !important;
    }
    .shipping-area{
        margin-top: -75px;
        padding-bottom: 25px;
    }

    .link-share, .comments {
        text-transform: none;
    }
</style>
<!-- Begin Slider Area -->
<div class="slider-area">
    @if(TempData["error"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["error"]
        </div>
    }
    <!-- Main Slider -->
    <div class="swiper-container main-slider swiper-arrow with-bg_white">
        <div class="swiper-wrapper" style="margin-bottom: -10px;">
            <div class="swiper-slide animation-style-01">
                <div class="slide-inner bg-height" style="min-height: 250px; background-image:url('/assets/images/slider1.jpg') ; background-size:cover;background-position: center;
    background-repeat: no-repeat;">
                    <div class="container">
                        <div class="parallax-with-content">
                            <div class="slide-content">
                                <div class="title mb-9" style="font-size: 30px; color: #fff; font-family:Inter,Helvetica,Arial,sans-serif; line-height: 1.5; text-shadow: 1px 1px 1px #ccc;font-weight:530">
                                    <span style="color:#3399ff">TechnoShop</span> tặng kèm quà Tết từ đơn hàng <span style="color: red;">200k</span>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide animation-style-01">
                <div class="slide-inner bg-height" style="min-height: 250px;  background-image:url('/assets/images/slider2.jpg') ; background-size:cover;background-position: center;
    background-repeat: no-repeat;" >
                    <div class="container">
                        <div class="parallax-with-content">
                            <div class="slide-content">
                                <div class="title mb-9" style="font-size: 30px; color: #fff; font-family:Inter,Helvetica,Arial,sans-serif; line-height: 1.5; text-shadow: 1px 1px 1px #ccc;font-weight: 530;">
                                    Nhập mã <span style="color: #3399ff;">TNS590</span> giảm giá 5% cho tổng đơn hàng
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination with-bg d-md-none"></div>

        <!-- Add Arrows -->
        <div class="swiper-button-next" style="background: none; color: #fff;"></div>
        <div class="swiper-button-prev" style="background: none; color: #fff;"></div>
    </div>

</div>
<!-- Slider Area End Here -->
<!-- Begin Shipping Area -->
<div class="shipping-area section-space-top-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item" style="border: 1px solid #3399ff">
                    <div class="shipping-img">
                        <img src="~/assets/images/Freeship.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Miễn phí vận chuyển</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item" style="border: 1px solid #3399ff">
                    <div class="shipping-img">
                        <img src="~/assets/images/support.png" alt="Shipping Icon" style=" width: 130px;height: 107px;">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Hỗ trợ trực tuyến 24/7</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item" style="border: 1px solid #3399ff">
                    <div class="shipping-img">
                        <img src="~/assets/images/security.jpg" alt="Shipping Icon"  style=" width: 116px;height: 107px;">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Bảo mật thanh toán</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shipping Area End Here -->
