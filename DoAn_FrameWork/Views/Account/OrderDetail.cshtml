@model Order

@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="main-content" style="background-color:#f5f5fa">
    @* <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
    <div class="container h-100">
    <div class="row h-100">
    <div class="col-lg-12">
    <div class="breadcrumb-item">
    <h2 class="breadcrumb-heading">Product Related</h2>
    <ul>
    <li>
    <a>Trang chủ <i class="pe-7s-angle-right"></i></a>
    </li>
    <li>Giỏ hàng</li>
    </ul>
    </div>
    </div>
    </div>
    </div>
    </div> *@
    <div class="container h-100 p-2">
        <div class="row h-100">
            <div class="col-md-12">
                <div class="breadcrumb-item" style="align-items:flex-start; padding-left:15px">
                    @*  <h2 class="breadcrumb-heading">Giỏ hàng</h2> *@
                    <ul>
                        <li>
                            <a style="font-weight:600">Trang chủ <i class="pe-7s-angle-right"></i></a>
                        </li>
                        <li style="color:#3399ff">Chi tiết đơn hàng</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area pb-3">
        <div class="container" style="background-color:#fff ;padding:20px; border-radius:5px">
            <div class="row" style="padding:20px">
                <div class="col-md-6" style="display:flex;flex-direction:column;justify-content:space-between">
                    <div>
                        <h2>Thông tin đơn hàng</h2>
                       
                    </div>
                    <ul>
                        <li><strong>Mã đơn hàng: </strong><span>@Model.OrderId</span></li>
                        <li><strong>Ngày đặt hàng: </strong><span>@Model.CreatedAt</span></li>
                        <li><strong>Trạng thái: </strong><span>@Model.OrderStatus</span></li>
                    </ul>
                </div>
                <div class="col-md-6" style="justify-content:flex-end">
                    <div class="cart-page-total" style="padding-top:0;">
                        <h2>Tổng tiền</h2>
                        <ul>
                            <li>Tạm tính <span>@Model.OrderTotal.Value.ToString("#,##0") đ</span></li>
                            <li>Phí vận chuyển <span>0</span></li>
                            <li>Tổng tiền <span>@Model.OrderTotal.Value.ToString("#,##0") đ</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 cart-content">
                    @if(Model != null)
                    {
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead class="cart-head">
                                    <tr style="background-color:#3399ff; color:white; font-weight:bold">
                                        <th class="product-thumbnail">Ảnh</th>
                                        <th class="cart-product-name">Sản phẩm</th>
                                        <th class="product-price">Đơn giá</th>
                                        <th class="product-quantity">Số lượng</th>
                                        <th class="product-subtotal">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody class="cart_items">
                                    @foreach(var item in Model.OrderDetails)
                                    {

                                        
                                        <tr>
                                            <td class="product-thumbnail">
                                                <a href="javascript:void(0)">
                                                    <img src="@item.Product.ProductImage" style="height:112px; width:112px; object-fit:cover"
                                                         onerror="this.src='/assets/images/product/default_image.png';onerror='';" alt="@item.Product.ProductName">
                                                </a>
                                            </td>
                                            <td class="product-name"><a href="javascript:void(0)">@item.Product.ProductName</a></td>
                                            <td class="product-price"><span class="price">@item.Product.ProductPrice.Value.ToString("#,##0")</span></td>
                                            <td class="quantity">

                                                <p style="font-size:16px; font-weight:bold">@item.ProductSalesQuantity</p>

                                            </td>
                                            <td class="product-subtotal"><span class="amount">@((item.Product.ProductPrice * item.ProductSalesQuantity).Value.ToString("#,##0")) đ</span></td>
                                        </tr>
                                    }

                                </tbody>
                               </table>
                        </div>
                    }

                </div>
            </div>
            
        </div>
    </div>
</main>