@model DoAn_FrameWork.Models.Customer
@{
    string username = Context.Session.GetString("Username");
    string name = Context.Session.GetString("CustomerName");
    string email = Context.Session.GetString("CustomerEmail");
    string phone = Context.Session.GetString("Phone");

}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // List<Order> DanhSachDonHang = ViewBag.DonHang;
}
<style>
    .nav-link {
        background: none !important;
        border: none !important;
        color: #9F9FA0 !important;
        text-transform: none !important;
        font-weight: 500 !important;
    }

    .menu-info:hover {
        color: #3399ff;
    }

    .nav-item.active {
        background-color: #EBEBF1;
    }

    .icon-svg {
        width: 25px;
        height: 25px;
        margin-right: 4px;
    }

    #CustomerEmail, #Password, #RePassword {
        width: 160%;
    }

    ::placeholder {
        font-size: 14px;
    }
</style>
<main class="main-content" style="background: #F5F5FA; padding-bottom: 15px;">
    <div class="account-page-area section-space-y-axis-100" style="background: #F5F5FA; padding: 10px;">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item" style="float: left;">
                        <ul>
                            <li>
                                <a href="#" style="margin-left: 20px; color: #3399ff; font-weight:550">Trang chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Thông tin tài khoản</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3" style="padding-right: 0">
                <div style="margin-bottom: 15px; margin-left: 20px;">
                    <img src="https://salt.tikicdn.com/desktop/img/avatar.png" style="height: 40px; width: 40px;    border-radius: 50%;border: 1px solid #ddd;">
                    Khách hàng
                    <span style="font-weight:500; color: #3399ff">@name</span>
                </div>
                <ul class="nav myaccount-tab-trigger" id="account-page-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="account-dashboard-tab" data-bs-toggle="tab" href="#account-dashboard" role="tab" aria-controls="account-dashboard" aria-selected="true">
                            <svg class="icon-svg" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"></path></svg>
                            <span class="menu-info" style="font-weight:300;">Thông tin tài khoản</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="account-infos-tab" data-bs-toggle="tab" href="#account-infos" role="tab" aria-controls="account-infos" aria-selected="false">
                            <svg class="icon-svg" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"></path></svg>
                            <span class="menu-info" style="font-weight:300;">Thông báo của tôi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="account-address-tab" data-bs-toggle="tab" href="#account-address" role="tab" aria-controls="account-address" aria-selected="false">
                            <svg class="icon-svg" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"></path></svg>
                            <span class="menu-info" style="font-weight:300;">Địa chỉ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="account-orders-tab" data-bs-toggle="tab" href="#account-orders" role="tab" aria-controls="account-orders" aria-selected="false">
                            <svg class="icon-svg" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M13 12h7v1.5h-7zm0-2.5h7V11h-7zm0 5h7V16h-7zM21 4H3c-1.1 0-2 .9-2 2v13c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 15h-9V6h9v13z"></path></svg>
                            <span class="menu-info" style="font-weight:300;"> Quản lý đơn hàng</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9">
                <div style="font-weight: 400;">
                    <div style="margin-bottom: 15px;">Thông tin</div> <div />
                    <div class="tab-content myaccount-tab-content" id="account-page-tab-content" style="min-height: 400px;border: none;border-radius: 5px;background: #fff;">
                        <div class="tab-pane fade show active" id="account-dashboard" role="tabpanel" aria-labelledby="account-dashboard-tab">
                            <div class="myaccount-dashboard">
                                <div class="info-account" style="display: flex;">
                                    <div class="styles__StyleAvatar-sc-7twymm-0 iRBxWb" style="background-color: rgb(240, 248, 255);border-radius: 50%;width: 112px;height: 112px;border: 4px solid rgb(194, 225, 255);position: relative;-webkit-box-pack: center;justify-content: center;display: flex;-webkit-box-align: center;align-items: center;">
                                        <div>
                                            <div class="avatar-view">
                                                <img src="https://frontend.tikicdn.com/_desktop-next/static/img/account/avatar.png" alt="avatar" class="default" style="    width: 50px;height: 50px;">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="invidual-info" style="margin-top: 28px;margin-left: 50px;font-weight: 300;">
                                        <div style="margin-bottom: 10px;">
                                            Họ và tên:
                                            <span style="font-weight:500">@name</span>
                                        </div>
                                        <div>
                                            Username:
                                            <span style="font-weight:500">@username</span>
                                        </div>
                                    </div>

                                </div>
                                <div class="info-acc">
                                    <div class="invidual-info" style="margin-left:160px;font-weight: 300;">
                                        <div style="margin-bottom: 25px;">
                                            Địa chỉ Email:
                                            <span style="font-weight:500">@email</span>
                                            <button class="btn" style="border: 1px solid #0B74E5; color: #0B74E5;float:right;font-size:11px">Cập nhật</button>
                                        </div>
                                        <div>
                                            Số điện thoại:
                                            <span style="font-weight:500">@phone</span>
                                            <button class="btn" style="border: 1px solid #0B74E5; color: #0B74E5;float:right;font-size:11px">Cập nhật</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="myaccount-form" style="border: none;    margin-top: 40px;border-top: 1px solid #ddd;padding-top: 20px;">
                                    <p style="font-size: 15px; font-weight: 400; color: #3399ff">Thay đổi thông tin tài khoản</p>
                                    <div class="myaccount-form-inner">

                                        @using (Html.BeginForm("Index", "Account", FormMethod.Post))
                                        {
                                            <div class="single-input">
                                                @Html.TextBoxFor(x => x.CustomerEmail, new { @type = "email", placeholder = "Email của bạn", name = "customer_email", required = "required" })
                                            </div>
                                            <div class="single-input">
                                                @Html.TextBoxFor(x => x.Password, new { @type = "password", placeholder = "Mật khẩu hiện tại", name = "customer_currentpass", required = "required" })
                                            </div>
                                            <div class="single-input">
                                                @Html.TextBoxFor(x => x.Password, new { @type = "password", placeholder = "Mật khẩu mới", name = "customer_newpass", required = "required" })
                                            </div>
                                            <div class="single-input">
                                                @Html.TextBoxFor(x => x.RePassword, new { @type = "password", placeholder = "Xác nhận mật khẩu mới", name = "customer_renewpass", required = "required" })
                                            </div>
                                            <div class="single-input">
                                                <input class="btn" type="submit" name="luuthaydoi" value="Lưu thay đổi" style="background: #3399ff; border-radius: 5px; border:none; color: #fff;">
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-orders" role="tabpanel" aria-labelledby="account-orders-tab">
                            <div class="myaccount-orders">
                                <h4 class="small-title">DANH SÁCH ĐƠN HÀNG</h4>
                             @*    @await Html.PartialAsync("_OrderPartialView.cshtml", DanhSachDonHang) *@
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-address" role="tabpanel" aria-labelledby="account-address-tab">
                            <div class="myaccount-address">
                                <div class="row">
                                    <div class="col">
                                        <h4 class="small-title" style="font-family:Inter,Helvetica,Arial,sans-serif;">Địa chỉ nhận hàng</h4>
                                        <address style="font-family:Inter,Helvetica,Arial,sans-serif;">
                                            Khu phố 6, phường Linh Trung, Thủ Đức, Thành phố Hồ Chí Minh
                                        </address>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-infos" role="tabpanel" aria-labelledby="account-infos-tab">
                            <div class="myaccount-address">
                                <div class="row">
                                    <div class="col">
                                        <p style="font-weight: 300;">Hiện chưa có thông báo!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-details" role="tabpanel" aria-labelledby="account-details-tab">
                            <div class="myaccount-details">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    var liElements = document.querySelectorAll('.nav-item');


    liElements.forEach(function (li) {
        li.addEventListener('click', function () {
            liElements.forEach(function (li) {
                li.classList.remove('active');
            });
            this.classList.add('active');
        });
    });
</script>