@model DoAn_FrameWork.Areas.Admin.Models.GroupProduct

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Nhóm sản phẩm
                </h2>
            </div>
            <div class="card-body">
                <ol class="breadcrumb breadcrumb-arrows">
                    <li class="breadcrumb-item "><a asp-area="Admin" asp-controller="AdminGroupProducts" asp-action="Index">List</a></li>
                    <li class="breadcrumb-item active"><a href="#">Add</a></li>
                    <!-- Các mục breadcrumb khác nếu cần -->
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        <div class="col-12">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Nhập thông tin</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="GroupProductName">Tên nhóm sản phẩm</label>
                            <input asp-for="GroupProductName" class="form-control">
                            <span asp-validation-for="GroupProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


