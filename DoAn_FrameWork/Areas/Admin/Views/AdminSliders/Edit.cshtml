@model DoAn_FrameWork.Models.Slider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Slider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SliderId" />
            <div class="form-group">
                <label asp-for="SliderName" class="control-label"></label>
                <input asp-for="SliderName" class="form-control" />
                <span asp-validation-for="SliderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderDesc" class="control-label"></label>
                <input asp-for="SliderDesc" class="form-control" />
                <span asp-validation-for="SliderDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderImg" class="control-label"></label>
                <input asp-for="SliderImg" class="form-control" />
                <span asp-validation-for="SliderImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

